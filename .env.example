# =============================================================================
# UBL Server - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# Database Configuration
# ------------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgres://username:password@host:port/database
# Railway will automatically provide this via DATABASE_URL when you add PostgreSQL
DATABASE_URL=postgres://user:password@localhost:5432/ubl_dev

# Server Configuration
# ------------------------------------------------------------------------------
# Port to bind the server (Railway sets this automatically)
PORT=8080

# WebAuthn Configuration
# ------------------------------------------------------------------------------
# Relying Party ID - should match your domain (e.g., "example.com" or "localhost")
WEBAUTHN_RP_ID=localhost

# WebAuthn Origin - full URL where the app is accessed
# Must include protocol (http:// or https://)
WEBAUTHN_ORIGIN=http://localhost:8080

# Logging Configuration (optional)
# ------------------------------------------------------------------------------
# Rust log level: trace, debug, info, warn, error
# RUST_LOG=info,ubl_server=debug
